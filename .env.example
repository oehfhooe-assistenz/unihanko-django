# UniHanko Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit the real .env file!

# ==============================================================================
# SECURITY
# ==============================================================================
# Generate strong keys using: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-django-secret-key-here
HANKOSIGN_SECRET=your-hankosign-secret-key-here
CSRF_TRUSTED_ORIGINS=https://unihanko.domain.com,https://www.unihanko.domain.com

# ==============================================================================
# ENVIRONMENT
# ==============================================================================
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
# Environment: development (local), staging (Suupu), production (live)
ENVIRONMENT=development

# ==============================================================================
# DATABASE (Phase 3 - Prod/Staging only)
# ==============================================================================
# Uncomment and configure for production/staging:
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=unihanko_prod
# DB_USER=unihanko_user
# DB_PASSWORD=your-db-password
# DB_HOST=postgres
# DB_PORT=5432

# ==============================================================================
# MINIO / OBJECT STORAGE (Prod/Staging only)
# ==============================================================================
# For development, leave empty (uses local filesystem)
# For production/staging, configure:
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_BUCKET_NAME=unihanko-prod
MINIO_ENDPOINT_URL=http://minio:9000

# ==============================================================================
# EMAIL (Optional - Phase 3)
# ==============================================================================
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=noreply@example.com
# EMAIL_HOST_PASSWORD=your-email-password

# ==============================================================================
# NOTES
# ==============================================================================
# Development: Set DEBUG=True, uses SQLite + local filesystem
# Production:  Set DEBUG=False, uses PostgreSQL + MinIO
# Staging:     Set DEBUG=False, uses separate DB + MinIO staging bucket